<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.goodmorning.models.User" table="USERS" lazy="false">

         <!-- A 36 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
            
        <id name="userId" type="string" unsaved-value="null" >
            <column name="USER_ID_PK" sql-type="char(36)" not-null="true" />
             <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>		
        <property name="deviceId">
            <column name="DEVICE_ID" sql-type="tinytext" not-null="true"/>
        </property>
		 <property name="userToken">
            <column name="TOKEN" sql-type="tinytext" not-null="true"/>
        </property>
        <property name="nickname">
            <column name="NICKNAME" sql-type="tinytext" not-null="true"/>
        </property>                     
        <property name="creationTimestamp" type="timestamp">
            <column name="CREATION_TIME" sql-type="timestamp" not-null="true" />
        </property>        
        <property name="lastUpdateTimestamp" type="timestamp">
            <column name="LAST_UPDATE_TIME" sql-type="timestamp" not-null="true" />
        </property>
         <property name="lastAccessedTimestamp" type="timestamp">
            <column name="LAST_ACCESSED_TIME" sql-type="timestamp" not-null="true" />
        </property>
        
        <!-- Each user has one to many inbox's mapped to them --> 
        <!-- TODO FINSIH DESIGN -->
        <set name="taskSet" table="TASKS" lazy="false" cascade="all">
    		<key column="USER_ID_FK" not-null="true"/>
    		<one-to-many class="com.goodmorning.models.Task"/>
		</set>
		
		 <set name="rssFeeds" table="RSSFEEDS" lazy="false" cascade="all">
    		<key column="USER_ID_FK" not-null="true"/>
    		<one-to-many class="com.goodmorning.models.RSSFeed"/>
		</set>
		
        <!--  Every user has many friends and every friend can also have many friends -->
        
		<set name="household" table="USER_HOUSEHOLD_USER" lazy="false" cascade="all">
			<key column="USER_ID" />
			<!-- Note that hibernate uses the primary key of following class/table get value for column, which in this case
				happens to be another User-->
			<many-to-many column="HOUSEHOLD_USER_ID"  class="com.goodmorning.models.User" />
		</set>
    </class>

</hibernate-mapping>