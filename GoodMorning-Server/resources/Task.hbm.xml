<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

 
<hibernate-mapping>

    <class name="com.goodmorning.models.Task" table="TASKS" lazy="false">

         <!-- A 36 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. --> 
            
        <id name="taskId" type="string" unsaved-value="null" >
            <column name="TASK_ID_PK" sql-type="char(36)" not-null="true" />
             <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>
		            
		<property name="creationTimestamp" type="timestamp">
            <column name="CREATION_TIME" sql-type="timestamp" not-null="true" />
        </property>   
        
        <!-- TODO Is this ENUM Mapped correctly ? -->
        <property name="taskType" type="EnumType">
      		<column name="TASK_TYPE" sql-type="EnumType" not-null="true" />
        </property>  
        
        <property name="alertTime" type="time">
        	<column name="ALERT_TIME" sql-type="time" not-null="true" />
        </property>
        
        <!-- TODO Is this ENUM Mapped correctly ? -->
        <property name="alertType" type="EnumType">
        	<column name="ALERT_TYPE" sql-type="EnumType" not-null="true" />
        </property>
        
        <!-- TODO Is this ENUM Mapped correctly ? -->
        <property name="repeatType" type="EnumType">
        	<column name="REPEAT_TYPE" sql-type="EnumType" not-null="true" />
        </property>

        
        <!-- Many task's can be mapped to a single user. --> 
        
   		<many-to-one name="user" class="com.goodmorning.models.User" fetch="select" insert="false" update="false">
            <column name="USER_ID_FK" not-null="true" />
        </many-to-one>
       
    </class>

</hibernate-mapping>