<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

 
<hibernate-mapping>

    <class name="com.goodmorning.models.Task" table="TASKS" lazy="false">

         <!-- A 36 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. --> 
            
        <id name="taskId" type="string" unsaved-value="null" >
            <column name="TASK_ID_PK" sql-type="char(36)" not-null="true" />
             <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>
		      
		<property name="name" type="string">
			<column name="NAME" sql-type="tinytext" not-null="true" />
		</property>
		            
		<property name="creationTimestamp" type="timestamp">
            <column name="CREATION_TIME" sql-type="timestamp" not-null="true" />
        </property>   
        
        <property name="nextAlertTimestamp" type="timestamp">
            <column name="NEXT_ALERT_TIME" sql-type="timestamp" not-null="true" />
        </property>   
        
        <property name="taskType" column="TASK_TYPE" update="true" insert="true" index="true">
    		<type name="com.goodmorning.enums.HibernateVarCharEnum">
      			<param name="enumClass">com.goodmorning.enums.TaskType</param>
    		</type>       
  		</property>
        
        <property name="alertTime" type="time">
        	<column name="ALERT_TIME" sql-type="time" not-null="true" />
        </property>
        
        <property name="monday" type="boolean">
        	<column name="MON" sql-type="bit" not-null="true" />
        </property>
        
        <property name="tuesday" type="boolean">
        	<column name="TUE" sql-type="bit" not-null="true" />
        </property>
        
        <property name="wednesday" type="boolean">
        	<column name="WED" sql-type="bit" not-null="true" />
        </property>
        
         <property name="thursday" type="boolean">
        	<column name="THU" sql-type="bit" not-null="true" />
        </property>
        
        <property name="friday" type="boolean">
        	<column name="FRI" sql-type="bit" not-null="true" />
        </property>
        
        <property name="saturday" type="boolean">
        	<column name="SAT" sql-type="bit" not-null="true" />
        </property>
        
        <property name="sunday" type="boolean">
        	<column name="SUN" sql-type="bit" not-null="true" />
        </property>
        
        <!-- TODO Is this ENUM Mapped correctly ? -->
        <property name="alertType" column="ALERT_TYPE" update="true" insert="true" index="true">
    		<type name="com.goodmorning.enums.HibernateVarCharEnum">
      			<param name="enumClass">com.goodmorning.enums.AlertType</param>
    		</type>       
  		</property>
        
        <property name="Notes" type="string">
        	<column name="NOTES" sql-type="tinytext" not-null="true" />
        </property>
      
        
        <!-- Many task's can be mapped to a single user. -->         
   		<many-to-one name="user" class="com.goodmorning.models.User" fetch="select" insert="false" update="false">
            <column name="USER_ID_FK" not-null="true" />
        </many-to-one>
       
    </class>

</hibernate-mapping>